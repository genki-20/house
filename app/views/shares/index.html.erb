<%= render "shared/header" %>
<div class="main">

  <div class='share-contents'>
    <h2 class='title'>シェアハウス</h2>
    <%= link_to 'じっくり見てね', "#", class: "subtitle" %>
    <ul class='share-lists'>
      <% @shares.each do |share| %>
        <li class='list'>
          <%= link_to share_path(share.id) do %>
          <div class='item-img-content'>
            <%= image_tag share.image.url, class: "item-img" %>
            <%# if share.buy != nil %>
              <%#<div class='sold-out'>
                <span>Sold Out!!</span>
              </div>
            <%# end %>
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= share.product_name %>
            </h3>
            <div class='item-price'>
              <span><%= share.price %>円<br><%#= item.delivery_fee.name %></span>
              <div class='star-btn'>
                <%#= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>

      <% unless @shares.present? %>
        <li class='list'>
          <%= link_to '#' do %>
          <%#= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
          <div class='item-info'>
            <h3 class='item-name'>
              商品を出品してね！
            </h3>
            <div class='item-price'>
              <span>99999999円<br>(税込み)</span>
              <div class='star-btn'>
                <%#= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
      
    </ul>
  </div>
</div>